@import ('nib')
@import ('font.css')
@import url('//fonts.googleapis.com/css?family=Open+Sans:300,400,600,700')
  
  
$yellow = #f7de05
$dark = #22272a

.sans-font
  font-family 'Open Sans', 'Helvetica Neue', Helvetica, Arial, sans-serif

.pure-g [class *='pure-u'],
.pure-g-r [class*="pure-u"]
  @extends .sans-font

html,
body
  width 100%
  height 100%
  @extends .sans-font

.pure-form
  input[type='text'], input[type='password'], input[type='email'], input[type='url'], input[type='date'], input[type='month'], input[type='time'], input[type='datetime'], input[type='datetime-local'], input[type='week'], input[type='number'], input[type='search'], input[type='tel'], input[type='color'], select, textarea
    @extends .sans-font
  button
    @extends .sans-font

.pure-button
  @extends .sans-font

h1, h2, h3,
h4, h5, h6
  font-weight 400
  
h1
  font-weight 700
  font-size 8em
  letter-spacing -0.05em
  line-height 1em
  
h2
  text-transform uppercase
  font-weight 700
  font-size 2em
  letter-spacing -0.05em

h3
  text-transform uppercase
  font-weight 600
  font-size 1.2em
  letter-spacing -0.05em
  letter-spacing -0.05em
  
p
  font-size 1.2em
  line-height 1.6em
  font-weight 400
  
ul
  li
    font-size 1.2em
    line-height 1.6em
    margin-bottom 20px

hr
  margin-top 80px
  margin-bottom 80px
  border none
  border-top 2px solid #FFF
  &.yellow
    border-top-color $yellow

_spacer = 5, 10, 20, 40, 60, 80, 100, 150

for _val in _spacer
  .spacer-{ _val }
    height ( _val * 1px )

.text-left
  text-align left
.text-center
  text-align center
.text-right
  text-align right
  
.page
  width 100%
  height auto
  
  background $dark
  color #FFF

.container
  max-width 1100px
  margin 0 auto
  padding 60px
  
  
header
  border-bottom 2px solid $yellow
  padding-bottom 40px
  a.logo
    img
      width (376px / 2)
      height auto

footer
  border-top 2px solid $yellow
  padding-top 40px
  a.logo
    img
      width (188px / 2)
      height auto

section#heading
  border-bottom 2px solid #FFF

section#about
  padding 40px 0 0 0
  
section#offering
  $offerSpace = 5px
  margin 0 -($offerSpace)
  
  h3
    margin-bottom 0
    color $yellow
      
  .offer
    background darken($dark, 30%)
    display block
    padding 50px 10px 30px 10px
    margin $offerSpace
    font-weight 700
    text-transform uppercase
    text-align center
    color #FFF
    
    i
      padding 20px
      border-radius 100px
      border 2px solid $yellow
      color $yellow
      font-size 20px
      

section#how
  h3
    margin-bottom 0
    color $yellow
  h2
    margin-top 0
    
body
  header,
  section,
  footer
    transition all 0.8s ease
    opacity 0
    transform translate(0, 100px)
    
  header
    transition-delay 50ms
  section
    transition-delay 300ms
  footer
    transition-delay 450ms
  
    
  &.loaded
    header,
    section,
    footer
      transform none
      opacity 1

